.wrapper
  = render "/products/header.html.haml"
- if @card.blank?
  %ul.breadcrumb-list
    - breadcrumb :mypage
    - breadcrumb :card
    = breadcrumbs pretext: "", separator: " &rsaquo; ", class: "mypage-list"
  .my-page-background
    .contents-wrapper
      = render "side-bar"
      .pay
        .pay-upper 支払い方法
        .pay-lower
          .pay-lower-box
            .pay-lower-box-title クレジットカード一覧
            .pay-lower-box-btn
              .pay-lower-box-btn-icon
                =icon('far', 'credit-card')
              .pay-lower-box-btn-text

                = link_to "クレジットカードを追加する", new_card_path
        .pay-lower-guide
          支払い方法について
          = icon('fas', 'chevron-right')

- else
  %ul.breadcrumb-list
    - breadcrumb :mypage
    - breadcrumb :card
    = breadcrumbs pretext: "", separator: " &rsaquo; ", class: "mypage-list"
  .my-page-background
    .contents-wrapper
      = render "side-bar"
      = render "cards/card_show"

  = render "/products/footer.html.haml"
  = render "/products/sell-btn.html.haml"