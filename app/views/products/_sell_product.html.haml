.product-page
  %section.product-page__main__wrapper
    = form_for @product do |f|
      %h2.product-tittle
        = "商品の情報を入力"
      .form
        .form__block
          .sell-content
            %h3.sell-image__tittle
              出品画像
              %span.require 必須
              %p 最大10枚までアップロードできます
            #image-box-1
              .sell-image_box-0#box
                = f.fields_for :images do |i|
                  .input-area 
                    = i.file_field :image, type: 'file', name: "product[images_attributes][][image]", value: '', style: 'display:none', id: 'img-file'
                    %label{for: 'img-file'}
                      %pre 
                        :preserve
                          ドラッグアンドドロップ
                          またはクリックしてファイルをアップロード
          .sell-content__product
            .product__name
              %label
                商品名
                %span.require 必須
              %div
                = f.text_field :name, class: 'form__product__name', placeholder: '商品名(必須 40文字まで)'
            .product__content
              %label
                商品の説明
                %span.require 必須
              %div
                = f.text_field :content, class: 'form__product__name', placeholder: '商品の説明(必須1,000文字)(色,素材,重さ,定価,注意点など)例 2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。)'
          .sell-content__index.clearfix
            %h3.index__tittle
              商品の詳細
            .index__box
              .product__category
              %label
                カテゴリー
                %span.require 必須
              %div.select-box.box{:action => "", :name => "form1"}
                = f.fields_for :categories do |c|
                  = c.select :name, name: "product[categories_attributes][][name]" do
                    %option{:value => ""} ---
                    %option{:value => "1"} レディース
                    %option{:value => "2"} メンズ
                    %option{:value => "3"} ベビー・キッズ
                    %option{:value => "4"} インテリア・住まい・小物
                    %option{:value => "5"} 本・音楽・ゲーム
                    %option{:value => "6"} おもちゃ・ホビー・グッズ
                    %option{:value => "7"} コスメ・香水・美容
                    %option{:value => "8"} 家電・スマホ・カメラ
                    %option{:value => "9"} スポーツ・レジャー
                    %option{:value => "10"} ハンドメイド
                    %option{:value => "11"} チケット
                    %option{:value => "12"} 自転車・オートバイ
                    %option{:value => "13"} その他
              %div#add
              .product__category__group
              %label
                商品の状態
                %span.require 必須
              %div.select-box.box
                = f.select :status, name: "product[categories_attributes][][name]" do
                  %option{:value => ""} ---
                  %option{:value => "1"} 新品、未使用
                  %option{:value => "2"} 未使用に近い
                  %option{:value => "3"} 目立った傷や汚れなし
                  %option{:value => "4"} やや傷や汚れあり
                  %option{:value => "5"} 傷や汚れあり
                  %option{:value => "5"} 全体的に状態が悪い
          .sell-content__derivery.clearfix
            %h3.index__tittle
              配送について
            .index__box
              .product__category
              %label
                配送料の負担
                %span.require 必須
              %div.select-box.box
                = f.select :burden do
                  %option{:value => ""} ---
                  %option{:value => "1"} 送料込み(出品者負担)
                  %option{:value => "2"} 着払い(購入者負担)
              .product__category__group
              %label
                発送元の地域
                %span.require 必須
              %div.select-box.box
                = f.fields_for :areas do |d|
                  = d.select :name, name: "product[areas_attributes][][name]" do
                    %option{:value => ""} ---
                    %option{:value => "1"} 北海道
                    %option{:value => "2"} 青森県
                    %option{:value => "3"} 岩手県
                    %option{:value => "4"} 宮城県
                    %option{:value => "5"} 秋田県
                    %option{:value => "6"} 山形県
                    %option{:value => "7"} 福島県
                    %option{:value => "8"} 茨城県
                    %option{:value => "9"} 栃木県
                    %option{:value => "10"} 群馬県
                    %option{:value => "12"} 埼玉県
                    %option{:value => "13"} 千葉県
                    %option{:value => "14"} 東京都
                    %option{:value => "15"} 神奈川県
                    %option{:value => "16"} 新潟県
                    %option{:value => "17"} 富山県
                    %option{:value => "18"} 石川県
                    %option{:value => "19"} 福井県
                    %option{:value => "20"} 山梨県
                    %option{:value => "21"} 長野県
                    %option{:value => "22"} 岐阜県
                    %option{:value => "23"} 静岡県
                    %option{:value => "24"} 愛知県
                    %option{:value => "25"} 三重県
                    %option{:value => "26"} 滋賀県
                    %option{:value => "27"} 京都府
                    %option{:value => "28"} 大阪府
                    %option{:value => "29"} 兵庫県
                    %option{:value => "30"} 奈良県
                    %option{:value => "31"} 和歌山県
                    %option{:value => "32"} 鳥取県
                    %option{:value => "33"} 島根県
                    %option{:value => "34"} 岡山県
                    %option{:value => "35"} 広島県
                    %option{:value => "36"} 山口県
                    %option{:value => "37"} 徳島県
                    %option{:value => "38"} 香川県
                    %option{:value => "39"} 愛媛県
                    %option{:value => "40"} 高知県
                    %option{:value => "41"} 福岡県
                    %option{:value => "42"} 佐賀県
                    %option{:value => "43"} 長崎県
                    %option{:value => "44"} 熊本県
                    %option{:value => "45"} 大分県
                    %option{:value => "46"} 宮城県
                    %option{:value => "47"} 鹿児島県
                    %option{:value => "48"} 沖縄県
                    %option{:value => "49"} 未定
              .product__category__group
              %label
                発送までの日数
                %span.require 必須
              %div.select-box.box
                = f.select :day do
                  %option{:value => ""} ---
                  %option{:value => "1"} 1~2日で発送
                  %option{:value => "2"} 2~3日で発送
                  %option{:value => "3"} 4~7日で発送
          .sell-content__index.clearfix
            %h3.index__tittle
              販売価格(300~9,999,999)
            .index__box
              %ul.product__category__group
                %li.price
                  .price__box
                    %label
                      価格
                      %span.require 必須
                    %div.price_textbox
                      ¥
                      = f.text_field :price, class: 'price_text', id: 'id',placeholder: '例)300'
                %li.price_tax
                  .tax_tittle
                    販売手数料(10%)
                  .tax_price#tax
                    = "-"
                %li.price_tax_profit
                  .profit_tittle
                    販売利益
                  .profit_price#profit
                    = "--"
          .sell-content__form__btn
            %div
              %p 禁止されている出品、行為を必ずご確認ください。
              %p またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブランドの販売は犯罪であり処罰される可能性があります。
              %p また、出品をもちまして加盟店規約に同意したことになります。
              = f.submit '出品する', class: 'form-btn'
              .back-btn
                = link_to 'もどる', root_path
